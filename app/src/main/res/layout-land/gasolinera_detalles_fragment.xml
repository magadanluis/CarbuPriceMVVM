<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/scrollView"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">
                <TextView
                    android:id="@+id/rotuloGasolinera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_margin="8dp"
                    android:visibility="gone"
                    android:id="@+id/direccionGasolinera"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_margin="8dp"
                    android:visibility="gone"
                    android:id="@+id/horarioGasolinera"/>
                <TextView
                    android:id="@+id/PrecioTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_margin="8dp"
                    android:visibility="gone"
                    android:text="@string/precioCombustible" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/precioGasoleoA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp" />
                    <TextView
                        android:id="@+id/precioGasoleoB"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp" />
                    <TextView
                        android:id="@+id/precioGasoleoPremium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp" />
                    <TextView
                        android:id="@+id/precioGasolina95E10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp" />
                    <TextView
                        android:id="@+id/precioGasolina95E5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp" />

                    <TextView
                        android:id="@+id/precioGasolina95E5Premium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/precioGasolina98E10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/precioGasolina98E5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/precioBiodiesel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp" />

                    <TextView
                        android:id="@+id/precioHidrogeno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/precioBioetanol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp" />
                    <TextView
                        android:id="@+id/precioGasNaturalComprimido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp" />
                    <TextView
                        android:id="@+id/precioGasNaturalLicuado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp" />
                    <TextView
                        android:id="@+id/precioGasesLicuadosPetroleo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="8dp" />
                </LinearLayout>
            </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutfragmentomapa"
        android:visibility="gone"
        android:layout_weight="1">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView android:id="@+id/ivMapTransparent" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@android:color/transparent" />
    </fragment>
    </LinearLayout>
</LinearLayout>
